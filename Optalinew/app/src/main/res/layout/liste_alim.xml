<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Title -->
    <TextView android:id="@+id/title"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Liste des produits"
        android:textStyle="bold"
        android:textSize="30dip"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/suppr"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="33"
            android:background="@drawable/button_shape"
            android:textSize="12dip"
            android:text="Suppr" />

        <Button
            android:id="@+id/recherche_recette"
            android:textSize="12dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="33"
            android:text="recherche recette"
            android:background="@drawable/button_shape" />

        <EditText
            android:id="@+id/recherche_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:layout_weight="33"
            android:textSize="16dip"
            android:hint="Rechercher" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/triNom"
            android:text="Nom"
            android:layout_weight="20"
            android:onClick="onClickRadio"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/triDate"
            android:text="Date"
            android:layout_weight="20"
            android:onClick="onClickRadio"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/triStock"
            android:text="Stock"
            android:layout_weight="20"
            android:onClick="onClickRadio"
            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/trihisto"
            android:text="Historique"
            android:layout_weight="20"
            android:onClick="onClickRadio"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/triSuppr"
            android:text="Suppr"
            android:layout_weight="20"
            android:onClick="onClickRadio"/>

    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:scrollbarStyle="outsideInset">
        <ListView
            android:id="@+id/list_ing"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </ScrollView>

